<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.infrastructure.persistent.dao.IUserCreditAccountDao">
    <resultMap id="UserCreditAccountMap" type="org.example.infrastructure.persistent.po.UserCreditAccount">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="total_amount" property="totalAmount"/>
        <result column="available_amount" property="availableAmount"/>
        <result column="account_status" property="accountStatus"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <insert id="insert">
        insert into user_credit_account(user_id,total_amount,available_amount,account_status,create_time,update_time)
        values(#{userId},#{totalAmount},#{availableAmount},#{accountStatus},now(),now())
    </insert>
    <update id="AddAmount" parameterType="org.example.domain.award.model.entity.UserCreditAwardEntity">
        UPDATE `user_credit_account`
        SET total_amount=total_amount+#{creditAmount},available_amount=available_amount+#{creditAmount}
        WHERE user_id=#{userId}
    </update>

    <select id="queryByUserId" resultMap="UserCreditAccountMap">
        select *
        from user_credit_account
        where user_id=#{userId}
    </select>
</mapper>